#!/bin/bash

background="#2D2D2D"
backgroundalt="#444444"
text="#FFFFFF"
textalt="#B5B5B5"
primary="#FF5F00"
contrast="#0087D7"

terminalbackground=$(./colortrans.py "$background")
echo $terminalbackground

#£BACKGROUND
#£BACKGROUND-ALT
#
#£TEXT
#£TEXT-ALT
#
#£PRIMARY
#£CONTRAST

DIR="$( cd "$( dirname "${BASH_SOURCE[0]}"  )" && pwd  )"
cd $DIR/../..
find ./ -type f -exec sed -i "s/#BACKGROUND/$background/g" {} \;
find ./ -type f -exec sed -i "s/#B-ALT/$backgroundalt/g" {} \;
find ./ -type f -exec sed -i "s/#TEXT/$text/g" {} \;
find ./ -type f -exec sed -i "s/#T-ALT/$textalt/g" {} \;
find ./ -type f -exec sed -i "s/#PRIMARY/$primary/g" {} \;
find ./ -type f -exec sed -i "s/#CONTRAST/$contrast/g" {} \;
cd $DIR
